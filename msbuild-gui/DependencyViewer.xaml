<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="msbuild_gui.DependencyViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="Dependency Order"
    Width="700"
    Height="600"
    ui:WindowHelper.UseModernWindowStyle="True"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Text="Build Order and Dependencies" />
            <TextBlock
                Margin="0,5,0,0"
                FontSize="12"
                Foreground="Gray"
                Text="This shows the optimal build order based on project dependencies" />
        </StackPanel>

        <TabControl Grid.Row="1">
            <TabItem Header="Sequential Build Order">
                <Grid>
                    <TextBox
                        x:Name="SequentialTextBox"
                        Padding="10"
                        VerticalScrollBarVisibility="Auto"
                        FontFamily="Consolas"
                        FontSize="12"
                        IsReadOnly="True"
                        TextWrapping="Wrap" />
                </Grid>
            </TabItem>
            <TabItem Header="Parallel Build Groups">
                <Grid>
                    <TextBox
                        x:Name="ParallelTextBox"
                        Padding="10"
                        VerticalScrollBarVisibility="Auto"
                        FontFamily="Consolas"
                        FontSize="12"
                        IsReadOnly="True"
                        TextWrapping="Wrap" />
                </Grid>
            </TabItem>
            <TabItem Header="Dependencies">
                <Grid>
                    <TextBox
                        x:Name="DependenciesTextBox"
                        Padding="10"
                        VerticalScrollBarVisibility="Auto"
                        FontFamily="Consolas"
                        FontSize="12"
                        IsReadOnly="True"
                        TextWrapping="Wrap" />
                </Grid>
            </TabItem>
        </TabControl>

        <StackPanel
            Grid.Row="2"
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="CopyButton"
                Width="80"
                Margin="0,0,10,0"
                Click="CopyButton_Click"
                Content="Copy" />
            <Button
                x:Name="CloseButton"
                Width="80"
                Click="CloseButton_Click"
                Content="Close"
                IsDefault="True"
                Style="{StaticResource AccentButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>
